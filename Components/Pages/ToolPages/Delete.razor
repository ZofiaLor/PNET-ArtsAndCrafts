@page "/tools/delete"
@using Microsoft.EntityFrameworkCore
@using ArtsAndCrafts.Models
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Tool</h2>
    <hr />
    @if (tool is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@tool.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Material</dt>
            <dd class="col-sm-10">@tool.Material</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@tool.Type</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Brand</dt>
            <dd class="col-sm-10">@tool.Brand</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Size</dt>
            <dd class="col-sm-10">@tool.Size</dd>
        </dl>
        <EditForm method="post" Model="tool" OnValidSubmit="DeleteTool" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(tool is null)">Delete</button> |
            <a href="/tools">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Tool? tool;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        tool = await context.Tools.FirstOrDefaultAsync(m => m.Id == Id);

        if (tool is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteTool()
    {
        using var context = DbFactory.CreateDbContext();
        var comments = await context.Comments.Where(c => c.CraftObjectId == tool.Id).ToListAsync();
        foreach (var comment in comments)
        {
            context.Comments.Remove(comment);
        }
        var pictures = await context.Pictures.Where(c => c.CraftObjectId == tool.Id).ToListAsync();
        foreach (var picture in pictures)
        {
            string path = Path.Combine("StaticFiles", picture.Path);
            context.Pictures.Remove(picture);
            File.Delete(path);
        }
        context.Tools.Remove(tool!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tools");
    }
}
