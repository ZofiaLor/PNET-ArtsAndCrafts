@page "/tools/create"
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using ArtsAndCrafts.Models
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Tool</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Tool" OnValidSubmit="AddTool" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="material" class="form-label">Material:</label> 
                <InputText id="material" @bind-Value="Tool.Material" class="form-control" /> 
                <ValidationMessage For="() => Tool.Material" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="type" class="form-label">Type:</label> 
                <InputText id="type" @bind-Value="Tool.Type" class="form-control" /> 
                <ValidationMessage For="() => Tool.Type" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="brand" class="form-label">Brand:</label> 
                <InputText id="brand" @bind-Value="Tool.Brand" class="form-control" /> 
                <ValidationMessage For="() => Tool.Brand" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="size" class="form-label">Size:</label> 
                <InputNumber id="size" @bind-Value="Tool.Size" class="form-control" /> 
                <ValidationMessage For="() => Tool.Size" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="Tool.Name" class="form-control" /> 
                <ValidationMessage For="() => Tool.Name" class="text-danger" /> 
            </div>        
            <PictureInterface newPictures="@newPictures" maxFileSizeBytes="@maxFileSizeBytes" />
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/tools">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Tool Tool { get; set; } = new();

    private List<Tuple<Picture, IBrowserFile>> newPictures = new List<Tuple<Picture, IBrowserFile>>();
    private int maxFileSizeBytes = 1024 * 1024;

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddTool()
    {
        using var context = DbFactory.CreateDbContext();
        context.Tools.Add(Tool);
        await context.SaveChangesAsync();

        foreach (var item in newPictures)
        {
            item.Item1.CraftObject = Tool;
            item.Item1.CraftObjectId = Tool.Id;
            await using FileStream fs = new(Path.Combine("StaticFiles", item.Item1.Path), FileMode.Create);
            await item.Item2.OpenReadStream(maxFileSizeBytes).CopyToAsync(fs);
            context.Pictures.Add(item.Item1);
        }
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/tools");
    }
}
