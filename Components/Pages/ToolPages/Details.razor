@page "/tools/details"
@rendermode InteractiveServer
@using ArtsAndCrafts.Data
@using Microsoft.EntityFrameworkCore
@using ArtsAndCrafts.Models
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider _authenticationStateProvider
@inject IJSRuntime JsRuntime

<PageTitle>Details</PageTitle>

<div>
    @if (tool is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <h2>@tool.Name</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Material</dt>
            <dd class="col-sm-10">@tool.Material</dd>
            <dt class="col-sm-2">Type</dt>
            <dd class="col-sm-10">@tool.Type</dd>
            <dt class="col-sm-2">Brand</dt>
            <dd class="col-sm-10">@tool.Brand</dd>
            <dt class="col-sm-2">Size</dt>
            <dd class="col-sm-10">@tool.Size</dd>
        </dl>
        <div>
            <a href="@($"/tools/edit?id={tool.Id}")">Edit</a> |
            <a href="@($"/tools")">Back to List</a>
        </div>
        @if (user is not null)
        {
            @if (toolUser is null)
            {
                <button type="button" class="btn btn-warning" @onclick="@(e => addBookmark())">Add to bookmarks</button>
            }
            else
            {
                <button type="button" class="btn btn-secondary" @onclick="@(e => deleteBookmark())">Remove from bookmarks</button>
                @if (!isOwned)
                {
                    <button type="button" class="btn btn-success" @onclick="@(e => changeIsOwned(true))">Mark as owned</button>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" @onclick="@(e => changeIsOwned(false))">Mark as not owned</button>
                }
            }
        }

        <h2>Comments</h2>
        <hr />
        @foreach (var c in toolComments)
        {
            @if (user is not null && c.AuthorId == user.Id)
            {
                <div class="card border-info card-body">
                    You commented on @c.CreationDate <hr />
                    <div style="white-space: pre-wrap">@c.Content</div> <hr />
                    <div> <button type="button" class="btn btn-outline-danger" @onclick="@(e => DeleteComment(c))">Delete comment</button></div>
                </div>
            }
            else
            {
                <div class="card card-body">
                    <div>@c.Author.UserName commented on @c.CreationDate <hr /></div>
                    <div style="white-space: pre-wrap">@c.Content</div>
                </div>
            }
            <br />

        }
        <AuthorizeView Context="authContext">
            <Authorized>
                <EditForm method="post" Model="Comment" OnValidSubmit="AddComment" FormName="create" Enhance>
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" role="alert" />
                    <div class="mb-3">
                        <label for="content" class="form-label">Add new comment</label>
                        <InputTextArea id="content" @bind-Value="Comment.Content" class="form-control" />
                        <ValidationMessage For="() => Comment.Content" class="text-danger" />
                    </div>
                    <button type="submit" class="btn btn-primary">Comment</button>
                </EditForm>
            </Authorized>
            <NotAuthorized>
                <p>Log in to comment on this pattern</p>
            </NotAuthorized>
        </AuthorizeView>
    }
</div>

@code {
    private Tool? tool;
    private ApplicationUser? user;
    private ToolUser? toolUser;
    private List<Comment>? toolComments;

    [SupplyParameterFromQuery]
    private int Id { get; set; }
    [SupplyParameterFromForm]
    private Comment Comment { get; set; } = new();

    private bool isOwned = false;

    private ApplicationDbContext? context;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        tool = await context.Tools.FirstOrDefaultAsync(m => m.Id == Id);
        var claims = (await _authenticationStateProvider.GetAuthenticationStateAsync()).User.Identity;
        if (claims is not null)
            user = await context.Users.Where(u => u.UserName == claims.Name).FirstOrDefaultAsync();

        if (tool is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        toolComments = await context.Comments.Include(c => c.Author).Where(c => c.CraftObjectId == tool.Id).ToListAsync();
        if (user is not null)
        {
            toolUser = await context.ToolUsers.FirstOrDefaultAsync(t => t.ToolId == tool.Id && t.UserId == user.Id);
            if (toolUser is not null)
            {
                isOwned = toolUser.IsOwned;
            }
        }
    }

    private async Task AddComment()
    {
        if (user is null) return;
        Comment.Author = user;
        Comment.AuthorId = user.Id;
        Comment.CraftObject = tool;
        Comment.CraftObjectId = tool.Id;
        Comment.CreationDate = DateTime.Now;
        context.Comments.Add(Comment);
        await context.SaveChangesAsync();
        toolComments.Add(Comment);
        NavigationManager.NavigateTo("/tools/details?id=" + tool.Id);
    }

    private async Task DeleteComment(Comment comment)
    {
        bool confirmed = await JsRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this comment?");
        if (confirmed)
        {
            toolComments.Remove(comment);
            context.Comments.Remove(comment);
            await context.SaveChangesAsync();
        }
    }

    private async Task addBookmark()
    {
        if (toolUser is null)
        {
            toolUser = new ToolUser();
            toolUser.Tool = tool;
            toolUser.ToolId = tool.Id;
            toolUser.User = user;
            toolUser.UserId = user.Id;
            context.ToolUsers.Add(toolUser);
            await context.SaveChangesAsync();
        }
    }

    private async Task deleteBookmark()
    {
        if (toolUser is not null)
        {
            context.ToolUsers.Remove(toolUser);
            await context.SaveChangesAsync();
            toolUser = null;
            isOwned = false;
        }
    }

    private async Task changeIsOwned(bool value)
    {
        if (toolUser is not null)
        {
            toolUser.IsOwned = value;
            await context.SaveChangesAsync();
            isOwned = value;
        }
    }
}
