@page "/tools/edit"
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer
@using ArtsAndCrafts.Data
@using Microsoft.EntityFrameworkCore
@using ArtsAndCrafts.Models
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Tool</h2>
<hr />
@if (Tool is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Tool" OnValidSubmit="UpdateTool" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Tool.Id" value="@Tool.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Tool.Name" class="form-control" />
                    <ValidationMessage For="() => Tool.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="material" class="form-label">Material:</label>
                    <InputText id="material" @bind-Value="Tool.Material" class="form-control" />
                    <ValidationMessage For="() => Tool.Material" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type:</label>
                    <InputText id="type" @bind-Value="Tool.Type" class="form-control" />
                    <ValidationMessage For="() => Tool.Type" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="brand" class="form-label">Brand:</label>
                    <InputText id="brand" @bind-Value="Tool.Brand" class="form-control" />
                    <ValidationMessage For="() => Tool.Brand" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="size" class="form-label">Size:</label>
                    <InputNumber id="size" @bind-Value="Tool.Size" class="form-control" />
                    <ValidationMessage For="() => Tool.Size" class="text-danger" />
                </div>
                <PictureInterface craftObject="@Tool" pictureList="@pictureList" newPictures="@newPictures" maxFileSizeBytes="@maxFileSizeBytes" picturesToDelete="@picturesToDelete" />
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/tools">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Tool? Tool { get; set; }

    private ApplicationDbContext? context;

    private IEnumerable<Picture>? pictureList;
    private List<Picture> picturesToDelete = new List<Picture>();
    private List<Tuple<Picture, IBrowserFile>> newPictures = new List<Tuple<Picture, IBrowserFile>>();
    private int maxFileSizeBytes = 1024 * 1024;

    protected override async Task OnInitializedAsync()
    {
        context ??= DbFactory.CreateDbContext();
        Tool ??= await context.Tools.FirstOrDefaultAsync(m => m.Id == Id);

        if (Tool is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        pictureList ??= await context.Pictures.Where(x => x.CraftObjectId == Id).ToListAsync();
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateTool()
    {
        context ??= DbFactory.CreateDbContext();
        var editedTool = await context.Tools.FindAsync(Id);
        if (editedTool is null)
        {
            NavigationManager.NavigateTo("notfound");
        }

        editedTool.Name = Tool.Name;
        editedTool.Material = Tool.Material;
        editedTool.Type = Tool.Type;
        editedTool.Brand = Tool.Brand;
        editedTool.Size = Tool.Size;

        foreach (var item in newPictures)
        {
            await using FileStream fs = new(Path.Combine("StaticFiles", item.Item1.Path), FileMode.Create);
            await item.Item2.OpenReadStream(maxFileSizeBytes).CopyToAsync(fs);
            context.Pictures.Add(item.Item1);
        }

        foreach (var picture in picturesToDelete)
        {
            string path = Path.Combine("StaticFiles", picture.Path);
            context.Pictures.Remove(picture);
            File.Delete(path);
        }
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/tools/details?id=" + Tool.Id);
    }

    private bool ToolExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Tools.Any(e => e.Id == id);
    }
}
