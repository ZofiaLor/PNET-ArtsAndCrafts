@page "/yarns/delete"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using ArtsAndCrafts.Models
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Yarn</h2>
    <hr />
    @if (yarn is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@yarn.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Material</dt>
            <dd class="col-sm-10">@yarn.Material</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Color</dt>
            <dd class="col-sm-10">@yarn.Color</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Brand</dt>
            <dd class="col-sm-10">@yarn.Brand</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Weight</dt>
            <dd class="col-sm-10">@yarn.Weight</dd>
        </dl>
        <EditForm method="post" Model="yarn" OnValidSubmit="DeleteYarn" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(yarn is null)">Delete</button> |
            <a href="/yarns">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Yarn? yarn;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        yarn = await context.Yarns.FirstOrDefaultAsync(m => m.Id == Id);

        if (yarn is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteYarn()
    {
        using var context = DbFactory.CreateDbContext();
        var comments = await context.Comments.Where(c => c.CraftObjectId == yarn.Id).ToListAsync();
        foreach (var comment in comments)
        {
            context.Comments.Remove(comment);
        }
        var pictures = await context.Pictures.Where(c => c.CraftObjectId == yarn.Id).ToListAsync();
        foreach (var picture in pictures)
        {
            string path = Path.Combine("StaticFiles", picture.Path);
            context.Pictures.Remove(picture);
            File.Delete(path);
        }
        context.Yarns.Remove(yarn!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/yarns");
    }
}
