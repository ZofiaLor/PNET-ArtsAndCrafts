@page "/patterns/create"
@rendermode InteractiveServer
@attribute [Authorize]
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using ArtsAndCrafts.Models
@using ArtsAndCrafts.Data
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider _authenticationStateProvider

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Pattern</h2>
<hr />
@if (yarnList is null || toolList is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Pattern" OnValidSubmit="AddPattern" FormName="create" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Pattern.Name" class="form-control" />
                    <ValidationMessage For="() => Pattern.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type:</label>
                    <InputText id="type" @bind-Value="Pattern.Type" class="form-control" />
                    <ValidationMessage For="() => Pattern.Type" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content:</label> 
                    <InputTextArea id="content" @bind-Value="Pattern.Content" class="form-control" /> 
                    <ValidationMessage For="() => Pattern.Content" class="text-danger" /> 
                </div>   
                <AddToolsYarnCreateComponent yarnToAddList="@yarnToAddList" toolToAddList="@toolToAddList" toolList="@toolList" yarnList="@yarnList" />
                <PictureInterface newPictures="@newPictures" maxFileSizeBytes="@maxFileSizeBytes" />
                <button type="submit" class="btn btn-primary">Create</button>
            </EditForm>
        </div>
    </div>
}


<div>
    <a href="/patterns">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Pattern Pattern { get; set; } = new();

    private ApplicationDbContext? context;

    private List<Yarn>? yarnList;
    private List<Tool>? toolList;
    private List<Yarn> yarnToAddList = new List<Yarn>();
    private List<Tool> toolToAddList = new List<Tool>();

    private List<Tuple<Picture, IBrowserFile>> newPictures = new List<Tuple<Picture, IBrowserFile>>();
    private int maxFileSizeBytes = 1024 * 1024;

    protected override async Task OnInitializedAsync()
    {
        context ??= DbFactory.CreateDbContext();
        yarnList ??= await context.Yarns.ToListAsync();
        toolList ??= await context.Tools.ToListAsync();
    }

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddPattern()
    {
        context ??= DbFactory.CreateDbContext();
        var username = (await _authenticationStateProvider.GetAuthenticationStateAsync()).User.Identity.Name;
        var user = await context.Users.Where(u => u.UserName == username).FirstOrDefaultAsync();
        Pattern.Author = user;
        Pattern.AuthorId = user.Id;
        Pattern.CreationDate = DateTime.Now;
        Pattern.LastEditDate = DateTime.Now;
        context.Patterns.Add(Pattern);
        await context.SaveChangesAsync();

        Pattern = await context.Patterns.Include(p => p.Yarns).Include(p => p.Tools).FirstOrDefaultAsync(m => m.Id == Pattern.Id);

        foreach (var tool in toolToAddList)
        {
            Pattern.Tools.Add(tool);
        }
        foreach (var yarn in yarnToAddList)
        {
            Pattern.Yarns.Add(yarn);
        }

        foreach (var item in newPictures)
        {
            item.Item1.CraftObject = Pattern;
            item.Item1.CraftObjectId = Pattern.Id;
            await using FileStream fs = new(Path.Combine("StaticFiles", item.Item1.Path), FileMode.Create);
            await item.Item2.OpenReadStream(maxFileSizeBytes).CopyToAsync(fs);
            context.Pictures.Add(item.Item1);
        }
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/patterns");
    }
}
