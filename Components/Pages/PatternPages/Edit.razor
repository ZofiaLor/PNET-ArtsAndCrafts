@page "/patterns/edit"
@attribute [Authorize]
@rendermode InteractiveServer
@using ArtsAndCrafts.Data
@using Microsoft.EntityFrameworkCore
@using ArtsAndCrafts.Models
@inject IDbContextFactory<ArtsAndCrafts.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider _authenticationStateProvider
@inject IWebHostEnvironment Environment

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Pattern</h2>
<hr />
@if (Pattern is null || pictureList is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Pattern" OnValidSubmit="UpdatePattern" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Pattern.Id" value="@Pattern.Id" />
                <input type="hidden" name="Pattern.AuthorId" value="@Pattern.AuthorId" />
                <input type="hidden" name="Pattern.CreationDate" value="@Pattern.CreationDate" />
                <input type="hidden" name="Pattern.LastEditDate" value="@Pattern.LastEditDate" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Pattern.Name" class="form-control" />
                    <ValidationMessage For="() => Pattern.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type:</label>
                    <InputText id="type" @bind-Value="Pattern.Type" class="form-control" />
                    <ValidationMessage For="() => Pattern.Type" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content:</label>
                    <InputTextArea id="content" @bind-Value="Pattern.Content" class="form-control" />
                    <ValidationMessage For="() => Pattern.Content" class="text-danger" />
                </div>
                <AddToolsYarnComponent Pattern="@Pattern" toolList="@toolList" yarnList="@yarnList" />

                <PictureInterface craftObject="@Pattern" pictureList="@pictureList" newPictures="@newPictures" maxFileSizeBytes="@maxFileSizeBytes" picturesToDelete="@picturesToDelete"/>
                
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/patterns">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Pattern? Pattern { get; set; }

    private ApplicationDbContext? context;
    private List<Yarn>? yarnList;
    private List<Tool>? toolList;
    private IEnumerable<Picture>? pictureList;
    private List<Picture> picturesToDelete = new List<Picture>();
    private List<Tuple<Picture, IBrowserFile>> newPictures = new List<Tuple<Picture, IBrowserFile>>();

    private int maxFileSizeBytes = 1024 * 1024;

    protected override async Task OnInitializedAsync()
    {
        context ??= DbFactory.CreateDbContext();
        Pattern ??= await context.Patterns.Include(p => p.Yarns).Include(p => p.Tools).FirstOrDefaultAsync(m => m.Id == Id);
        yarnList ??= await context.Yarns.ToListAsync();
        toolList ??= await context.Tools.ToListAsync();
        var claims = (await _authenticationStateProvider.GetAuthenticationStateAsync()).User.Identity;
        if (claims is not null)
        {
            var user = await context.Users.Where(u => u.UserName == claims.Name).FirstOrDefaultAsync();
            if (user.Id != Pattern.AuthorId)
            {
                NavigationManager.NavigateTo("/patterns/details?id=" + Pattern.Id);
            }
        }

        if (Pattern is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
        pictureList ??= await context.Pictures.Where(x => x.CraftObjectId == Id).ToListAsync();
    }

    private async Task UpdatePattern()
    {
        context ??= DbFactory.CreateDbContext();
        var editedPattern = await context.Patterns.FindAsync(Id);
        if (editedPattern is null)
        {
            NavigationManager.NavigateTo("notfound");
        }

        editedPattern.Name = Pattern.Name;
        editedPattern.Content = Pattern.Content;
        editedPattern.Type = Pattern.Type;
        editedPattern.LastEditDate = DateTime.Now;

        foreach(var item in newPictures)
        {
            await using FileStream fs = new(Path.Combine("StaticFiles", item.Item1.Path), FileMode.Create);
            await item.Item2.OpenReadStream(maxFileSizeBytes).CopyToAsync(fs);
            context.Pictures.Add(item.Item1);
        }

        foreach(var picture in picturesToDelete)
        {
            string path = Path.Combine("StaticFiles", picture.Path);
            context.Pictures.Remove(picture);
            File.Delete(path);
        }

        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/patterns/details?id=" + Pattern.Id);
    }
}
